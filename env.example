# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/auth_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_ACCESS_TOKEN_EXPIRES_IN=3600        # Access token: 1 hour (3600 seconds)
JWT_REFRESH_TOKEN_EXPIRES_IN=86400      # Refresh token: 24 hours (86400 seconds)
JWT_VERIFICATION_TOKEN_EXPIRES_IN=86400 # Email verification: 24 hours (86400 seconds)
JWT_RESET_TOKEN_EXPIRES_IN=3600         # Password reset: 1 hour (3600 seconds)

# Server Configuration
SERVER_DOMAIN=http://localhost:5000
FRONTEND_URL=http://localhost:3000
HOST=0.0.0.0
PORT=5000

# SMTP Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@example.com
SMTP_FROM_NAME=Auth API

# Upload Configuration
UPLOAD_DIR=./static
UPLOAD_MAX_SIZE=10485760
IMAGE_MAX_WIDTH=1920
IMAGE_MAX_HEIGHT=1080
IMAGE_QUALITY=75
GENERATE_THUMBNAILS=true
THUMBNAIL_SIZE=300
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,webp,bmp,tiff

# Logging
RUST_LOG=info
